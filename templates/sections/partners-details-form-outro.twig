{% set partnerFormOutroTitle = entry.partnerFormOutroTitle %}
{% set partnerFormOutroSubtitle = entry.partnerFormOutroSubtitle %}
{% set partnerFormOutroFormId = entry.partnerFormOutroFormId %}
{% if partnerFormOutroFormId %}
	<section {% if sectionId is defined %} id="{{ sectionId }}" {% endif %} class="u-section u-section--partners-details-form-outro">
		<div class="u-wrapper u-wrapper--content">
			<div class="partners-details-form-outro">
				<div class="title u-title u-title--section">{{ partnerFormOutroTitle ? partnerFormOutroTitle : 'Interested?' }}</div>
				<div class="subtitle">{{ partnerFormOutroSubtitle ? partnerFormOutroSubtitle : 'Fill the form below.' }}</div>
				<div class="form-hld">
					<script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/v2.js"></script>
					<script
							src="https://code.jquery.com/jquery-3.6.0.min.js"
							integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
							crossorigin="anonymous">
					</script>
					<script>
						hbspt.forms.create({
							region: "na1",
							portalId: "4249967",
							formId: "{{ partnerFormOutroFormId }}",
							onFormReady: function(form) {
								document.body.classList.add('is-partners-details-form');
								const formEl = form[0];
                                const customHubspotFormScripts = new CustomEvent('customHubspotFormScripts', {
                                    detail: {
                                        form: formEl,
                                        shortenSelects: false,
                                    },
                                });
                                document.dispatchEvent(customHubspotFormScripts);
							},
						});
					</script>
				</div>
			</div>
		</div>
	</section>
{% endif %}
