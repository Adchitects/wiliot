{% set isSecond = isSecond %}
{% set mainTitle = mainTitle %}
{% set mainText = mainText %}
{% set iconColumnsMatrix = iconColumnsMatrix %}
{% set middleText = middleText %}
{% set middleColumnsMatrix = middleColumnsMatrix %}
{% set bottomText = bottomText %}
{% set bottomColumnsMatrix = bottomColumnsMatrix %}
{% if mainTitle or mainText or iconColumnsMatrix %}
	<section {% if sectionId is defined %} id="{{ sectionId }}" {% endif %} class="u-section u-section--bb-applications {% if isSecond %} is-second-layout {% endif %} js-bg-shape-hld">
		<link rel="stylesheet" type="text/css" href="{{ alias('@web/src/css/components/bb-applications.css') }}?v=25092023">
		<div class="bg-shape bg-shape--bottom-left js-bg-shape" data-version="bottom-left">
			<img class="s2 js-s2 js-lazy" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E" data-src="{{ alias('@web/src/img/bg-shape/optimized/bottom-left-2.png' )}}" alt="Background shape blurry blob">
		</div>
		<div class="u-wrapper u-wrapper--medium">
			<div class="bb-applications">
				{% if mainTitle or mainText %}
					<div class="bb-applications__main-texts-hld">
						{% if mainTitle %}
							<h2 class="bb-applications__main-title">{{ mainTitle | raw  }}</h2>
						{% endif %}
						{% if mainText %}
							<div class="bb-applications__main-text">
								{{ mainText }}
							</div>
						{% endif %}
					</div>
				{% endif %}
				{% if iconColumnsMatrix %}
					<div class="bb-applications__icon-columns-hld">
						{% for item in iconColumnsMatrix %}
							{% set itemIcon = item.itemIcon.one() %}
							{% set itemTitle = item.itemTitle %}
							{% set itemText = item.itemText %}
							<div class="bb-applications__icon-columns-item {{ loop.first ? ' is-first' : '' }} {{ loop.index is even ? 'is-even' : 'is-odd' }} {{ loop.last ? ' is-last' : '' }}">
								{% if itemIcon %}
									<img class="js-lazy item-icon" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E" data-src="{{ itemIcon.getUrl() }}" alt="{{ itemIcon.title }}" width="40" height="40" />
								{% endif %}
								{% if itemTitle %}
									<h3 class="u-title item-title">{{ itemTitle | raw }}</h3>
								{% endif %}
								{% if itemText %}
									<div class="item-text">
										{{ itemText }}
									</div>
								{% endif %}
							</div>
						{% endfor %}
					</div>
				{% endif %}
				{% if middleText %}
					<div class="bb-applications__middle-text">
						{{ middleText }}
					</div>
				{% endif %}
				{% if middleColumnsMatrix %}
					<div class="bb-applications__middle-columns-hld">
						{% for item in middleColumnsMatrix %}
							{% set itemText = item.itemText %}
							<div class="bb-applications__middle-columns-item">
								{% if itemText %}
									<div class="item-text">
										{{ itemText }}
									</div>
								{% endif %}
							</div>
						{% endfor %}
					</div>
				{% endif %}
				{% if bottomText %}
					<div class="bb-applications__bottom-text">
						{{ bottomText }}
					</div>
				{% endif %}
				{% if bottomColumnsMatrix %}
					{% set length = bottomColumnsMatrix | length %}
					<div class="bb-applications__bottom-columns-hld {% if length == 1 %} is-1-item {% endif %}">
						{% for item in bottomColumnsMatrix %}
							{% set itemText = item.itemText %}
							<div class="bb-applications__bottom-columns-item">
								{% if itemText %}
									<div class="item-text">
										{{ itemText }}
									</div>
								{% endif %}
							</div>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</div>
	</section>
{% endif %}
