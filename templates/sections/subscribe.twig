<section class="u-section u-section--subscribe js-bg-shape-hld">
	<div class="bg-shape bg-shape--top-right js-bg-shape" data-version="top-right">
		<div class="s1 js-s1"></div>
		<div class="s2 js-s2"></div>
		<div class="s3 js-s3"></div>
	</div>
	<div class="bg-shape bg-shape--bottom-left js-bg-shape" data-version="bottom-left">
		<div class="s1 js-s1"></div>
		<div class="s2 js-s2"></div>
	</div>
	<div class="u-wrapper">
		{% set title = entry.subscribeTitle %}
		{% set subtitle = entry.subscribeSubtitle %}
		{% set button = entry.subscribeButton %}
		<div class="subscribe">
			{% if subtitle %}
				<span class="subscribe__subtitle u-subtitle u-subtitle--section">{{ subtitle }}</span>
			{% endif %}
			{% if title %}
				<h2 class="subscribe__title u-title u-title--section">{{ title }}</h2>
			{% endif %}
			{% if button.getUrl() %}
				<a href="{{button.getUrl()}}" class="subscribe__button btn u-btn u-btn--light">
					<span class="text">
						{{ button.customText }}
					</span>
				</a>
			{% endif %}
		</div>
	</div>
</section>
