{% set title = entry.featuresTitle %}
{% set subtitle = entry.featuresSubtitle %}
{% set contentList = entry.featuresContentList.all() %}
{% set button = entry.featuresButton %}
<section {% if sectionId is defined %} id="{{ sectionId }}" {% endif %} class="u-section u-section--features js-bg-shape-hld js-homepage-animation-hld">
	<div class="bg-shape bg-shape--top-right js-bg-shape" data-version="top-right">
		<img class="s1 js-s1 js-lazy" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E" data-src="{{ alias('@web/src/img/bg-shape/optimized/top-right-1.png' )}}" alt="Background shape blurry blob">
		<img class="s2 js-s2 js-lazy" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E" data-src="{{ alias('@web/src/img/bg-shape/optimized/top-right-2.png' )}}" alt="Background shape blurry blob">
		<img class="s3 js-s3 js-lazy" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E" data-src="{{ alias('@web/src/img/bg-shape/optimized/top-right-3.png' )}}" alt="Background shape blurry blob">
	</div>
	<div class="bg-shape bg-shape--bottom-left js-bg-shape" data-version="bottom-left">
		<img class="s2 js-s2 js-lazy" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E" data-src="{{ alias('@web/src/img/bg-shape/optimized/bottom-left-2.png' )}}" alt="Background shape blurry blob">
	</div>
	<div class="u-wrapper">
		<div class="features">
			{% if subtitle %}
				<span class="features__subtitle u-subtitle u-subtitle--section">{{ subtitle }}</span>
			{% endif %}
			{% if title %}
				<h2 class="features__title u-title u-title--section">{{ title }}</h2>
			{% endif %}
			<div class="features__grid">
				{% for content in contentList %}
					{% set title = content.featureContentTitle %}
					{% set description = content.featureContentDescription %}
					{% set featureButton = content.featureButton %}
					<div class="item">
						<div class="item__content">
							<h3 class="item__title">{{ title }}</h3>
							<div class="item__description">{{ description }}</div>
							{% if featureButton and featureButton.getUrl() %}
								<a href="{{ featureButton.getUrl() }}" class="item__btn u-btn u-btn--arrow">
									<span class="text">
										{{ featureButton.customText }}
									</span>
								</a>
							{% endif %}
							{% if loop.index == 1 %}
								<div class="item__image-mobile js-homepage-animation"></div>
							{% endif %}
						</div>
					</div>
				{% endfor %}
				<div class="item js-homepage-animation"></div>
			</div>
			{% if button.url %}
				<a href="{{ button.url }}" target="{{ button.target ? '_blank' : '_self' }}" rel="{{ button.target ? 'noopener noreferrer' : null }}" class="features__btn u-btn u-btn--light">
					<span class="text">{{ button.title }}</span>
				</a>
			{% endif %}
		</div>
	</div>
</section>
