{% set title = entry.featuresTitle %}
{% set subtitle = entry.featuresSubtitle %}
{% set contentList = entry.featuresContentList.all() %}
{% set button = entry.featuresButton %}
{% set mobileImages = ['hyperthin-iot-edge-nodes', 'connect-everything', 'fabric-of-intelligence'] %}
<section class="u-section u-section--features">
	<div class="u-wrapper">
		<div class="features">
			{% if subtitle %}
				<span class="features__subtitle u-subtitle u-subtitle--section">{{ subtitle }}</span>
			{% endif %}
			{% if title %}
				<h2 class="features__title u-title u-title--section">{{ title }}</h2>
			{% endif %}
			<div class="features__grid">
				{% for content in contentList %}
					{% set title = content.featureContentTitle %}
					{% set description = content.featureContentDescription %}
					<div class="item">
						<div class="item__content">
							<h3 class="item__title">{{ title }}</h3>
							<p class="item__description">{{ description }}</p>
							<img class="item__image-mobile js-lazy" width="345" height="345" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E" data-src="{{ alias('@web/src/img/homepage/'~mobileImages[loop.index - 1]~'.png') }}" alt="{{ title }}">
						</div>
					</div>
				{% endfor %}
				<div class="item">
					<img class="js-lazy" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E" data-src="{{ alias('@web/src/img/homepage/features.png' )}}" alt="Background shape blurry blob">
				</div>
			</div>
			<a href="{{ button.url }}" target="{{ button.target ? '_blank' : '_self' }}" rel="{{ button.target ? 'noopener noreferrer' : null }}" class="features__btn u-btn u-btn--light">
				<span class="text">{{ button.title }}</span>
			</a>
		</div>
	</div>
</section>
