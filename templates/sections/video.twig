{% set videoFileArray = entry.videoFile %}
{% if videoFileArray|length %}
	{% set videoFile = videoFileArray.one() %}
	{% set videoFileUrl = videoFile.getUrl() %}
{% endif %}
{% if videoFileArray|length %}
<section class="u-section u-section--video">
	<div class="u-wrapper u-wrapper--medium-small">
		<div class="video">
			<div class="video__hld js-video-hld is-paused">
				<span class="icon icon-button_play"></span>
				<video class="js-lazy" data-src="{{ videoFileUrl }}" preload="metadata"></video>
			</div>
		</div>
	</div>
</section>
{% endif %}
