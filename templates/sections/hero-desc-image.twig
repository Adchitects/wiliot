{% set title = entry.heroDescImageTitle %}
{% set description = entry.heroDescImageDescription %}
{% set image = entry.heroDescImageImage.one() %}
{% if entry is defined %}
	<section {% if sectionId is defined %} id="{{ sectionId }}" {% endif %} class="u-section u-section--hero-desc-image js-bg-shape-hld">
		<div class="u-wrapper u-wrapper--normal">
			<div class="hero-desc-image">
				<div class="bg-shape bg-shape--top-right js-bg-shape" data-version="top-right">
					<img class="s1 js-s1" src="{{ alias('@web/src/img/bg-shape/optimized/top-right-1.png' )}}" alt="Background shape blurry blob">
					<img class="s2 js-s2 js-lazy" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E" data-src="{{ alias('@web/src/img/bg-shape/optimized/top-right-2.png' )}}" alt="Background shape blurry blob">
					<img class="s3 js-s3 js-lazy" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E" data-src="{{ alias('@web/src/img/bg-shape/optimized/top-right-3.png' )}}" alt="Background shape blurry blob">
				</div>
				<div class="hero-desc-image__text-hld">
					{% if title %}
						<h1 class="hero-desc-image__title u-title u-title--big">{{ title }}</h1>
					{% endif %}
					{% if description %}
						<div class="hero-desc-image__description">{{ description }}</div>
					{% endif %}
				</div>
				{% if image %}
					<div class="hero-desc-image__img-hld">
						<img src="{{ image.getUrl() }}" alt="{{ image.title }}" class="hero-desc-image__image">
					</div
				{% endif %}
			</div>
		</div>
	</section>
{% endif %}
