{% set title = entry.logosSliderTitle %}
{% set subtitle = entry.logosSliderSubtitle %}
{% set slides = entry.logosSliderItems.all() %}
{% set link = entry.logosSliderButtonLink %}
{% set showArrows = entry.logosSliderShowArrows %}
{% if showArrows %}
	{% set showArrows = showArrows.contains('true') %}
{% endif %}
<section class="u-section u-section--logos-slider {{ showArrows ? '' : 'u-section--logos-slider-no-arrows' }}">
	<div class="logos-slider">
		{% if subtitle %}
			<h4 class="logos-slider__subtitle u-subtitle u-subtitle--section">{{ subtitle }}</h2>
		{% endif %}
		{% if title %}
			<h2 class="logos-slider__title u-title">{{ title }}</h2>
		{% endif %}
		{% if slides %}
			<div class="logos-slider__slider-wrapper">
				<div class="swiper-logos__slider js-logos-slider swiper-container">
					<div class="swiper-wrapper">
						{% for item in slides %}
							{% set image = item.itemImage.one() %}
							{% set title = item.itemTitle %}
							<div class="swiper-slide">
								{% if image %}
									<img data-src="{{ image.getUrl() }}" class="js-lazy" alt="{{ title }}">
								{% endif %}
								<div>{{ title }}</div>
							</div>
						{% endfor %}
					</div>
				</div>
				{% if showArrows %}
					<div class="swiper-button swiper-button-prev">
						<span class="icon icon-arrow-left"></span>
					</div>
					<div class="swiper-button swiper-button-next">
						<span class="icon icon-arrow-right"></span>
					</div>
				{% endif %}
			</div>
		{% endif %}
		{% if link %}
			<a href="{{ link }}" class="btn btn--learn-more u-btn u-btn--light">
				<span class="text">
					Learn more
				</span>
			</a>
		{% endif %}
	</div>
</section>
