{% set subtitle = entry.contentTwoColumnsSubtitle %}
{% set title = entry.contentTwoColumnsTitle %}
{% set centered = entry.contentTwoColumnsTextCentered %}
{% set content = entry.contentTwoColumnsContent %}
{% set videoLink = entry.contentTwoColumnsVideoLink %}
<section class="u-section u-section--two-columns">
	<div class="two-columns js-video-modal-hld">
		{% if subtitle %}
			<h5 class="two-columns__subtitle u-subtitle u-subtitle--section">{{ subtitle }}</h5>
		{% endif %}
		{% if title %}
			<h2 class="two-columns__title u-title u-title--section">{{ title }}</h2>
		{% endif %}
		{% if centered %}
			<p class="two-columns__centered">{{centered}}</p>
		{% endif %}
		{% if content %}
			<div class="two-columns__content">
				{{content}}
			</div>
		{% endif %}
		{% if videoLink %}
			<button class="btn u-btn u-btn--light two-columns__button js-video-modal-btn">
				<span class="icon icon-play"></span>
				<span data-video-src="{{ videoLink.getUrl() }}" class="text">Watch video</span>
			</button>
			<div class="modal-wrapper-outer js-video-modal-modal">
				<div class="overlay js-video-modal-close"></div>
				<div class="modal-wrapper-inner">
					<div class="modal">
						<iframe width="560" height="315" class="js-lazy" data-src="{{ videoLink.getUrl() }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
					</div>
					<span class="modal__close js-video-modal-close">
						{{ svg('src/svg/close.svg')}}
					</span>
				</div>
			</div>
		{% endif %}
	</div>
</section>
