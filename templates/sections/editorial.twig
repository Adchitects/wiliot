{% set subtitle = entry.editorialSubtitle %}
{% set title = entry.editorialTitle %}
{% set magazine = entry.editorialMagazine.one() %}
{% set button = entry.editorialButton %}

<section class="u-section u-section--editorial">
	<div class="u-wrapper">
		<div class="editorial">
			{% if subtitle %}
				<span class="u-subtitle editorial__subtitle u-subtitle--section">{{ subtitle }}</span>
			{% endif %}
			{% if magazine %}
				<img data-src="{{magazine.getUrl()}}" class="js-lazy editorial__magazine" alt="{{title}}">
			{% endif %}
			{% if title %}
				<h2 class="editorial__title u-title u-title--section">{{ title }}</h2>
			{% endif %}
			{% if button.getUrl() %}
				<a href="{{button.getUrl()}}" class="btn btn--read u-btn u-btn--light">{{button.customText}}</a>
			{% endif %}
		</div>
	</div>
</section>
