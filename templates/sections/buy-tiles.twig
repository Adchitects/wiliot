{% set subtitle = entry.buySubtitle %}
{% set title = entry.buyTitle %}
{% set tilesMatrix = entry.tiles.all() %}
{% if title or subtitle %}
<section class="u-section u-section--buy-tiles">
	<div class="buy-tiles">
		<div class="u-wrapper">
			<div class="buy-tiles__text-hld">
				<div class="subtitle u-subtitle u-subtitle--big">{{ subtitle }}</div>
				<div class="title u-title u-title--big">{{ title }}</div>
			</div>
		</div>
		<div class="u-wrapper u-wrapper--medium-wide">
			<div class="buy-tiles__tiles-hld">
				{% for item in tilesMatrix %}
					{% set iconName = item.tileIcon %}
					{% set title = item.tileTitle %}
					{% set topDescription = item.tileTopDescription %}
					{% set bottomDescription = item.tileBottomDescription %}
					{% set button = item.tileButton %}
					<div class="buy-tiles__tile-item">
						<div class="icon">{{ svg(alias('@assets/img/svg/' ~ iconName ~ '.svg')) }}</div>
						<div class="title">{{ title }}</div>
						<div class="description">
							<div class="description--top">{{ topDescription }}</div>
							<div class="description--bottom">{{ bottomDescription }}</div>
						</div>
						<a href="{{ button.url }}" target="{{ button.target ? '_blank' : '_self' }}" rel="{{ button.target ? 'noopener noreferrer' : null }}" class="btn u-btn u-btn--accent">
							<span class="text">{{ button.customText }}</span>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>
{% endif %}
