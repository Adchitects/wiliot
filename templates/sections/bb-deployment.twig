{% set itemsMatrix = entry.bbDeploymentItemsMatrix %}
{% if itemsMatrix %}
	<section {% if sectionId is defined %} id="{{ sectionId }}" {% endif %} class="u-section u-section--bb-deployment">
		<link rel="stylesheet" type="text/css" href="{{ alias('@web/src/css/components/bb-deployment.css') }}?v=07112023">
		<div class="bb-deployment">
			<div class="u-wrapper u-wrapper--medium">
				{% for item in itemsMatrix %}
					{% set itemTitle = item.itemTitle %}
					{% set itemText = item.itemText %}
					{% set itemImage = item.itemImage.one() %}
					<div class="bb-deployment__item {{ loop.first ? ' is-first' : '' }} {{ (loop.index is even) ? 'is-even' : 'is-odd' }} {{ loop.last ? 'is-last' : '' }}">
						<div class="item-text-hld">
							<div class="item-title">
								{{ itemTitle|raw|nl2br }}
							</div>
							<div class="item-text">
								{{ itemText }}
							</div>
						</div>
						{% if itemImage %}
							<div class="image-hld">
								<img class="js-lazy" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E" data-src="{{ itemImage.getUrl() }}" alt="{{ itemImage.title }}" width="300" height="222">
							</div>
						{% endif %}
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endif %}
