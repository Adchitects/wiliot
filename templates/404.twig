{% extends "index.twig" %}
{% block title %}
	{{ siteName }} - Page not found
{% endblock %}
{% block head %}
	{{ parent() }}
{% endblock %}
{% block main %}
	{% set page404title = page404.page404title %}
	{% set page404subtitle = page404.page404subtitle %}
	{% set page404button = page404.page404button %}
	{% set sectionId = '01' %}
	<section {% if sectionId is defined %} id="{{ sectionId }}" {% endif %} class="u-section u-section--page404 js-bg-shape-hld">
		<div class="bg-shape bg-shape--center-center js-bg-shape" data-version="center-center">
			<img class="s1 js-s1 js-lazy" src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 3 2'%3E%3C/svg%3E" data-src="{{ alias('@web/src/img/bg-shape/optimized/center-center.png' )}}" alt="Background shape blurry blob">
		</div>
		<div class="u-wrapper">
			<div class="page404">
				<h1 class="title u-title u-title--big">
					{{ page404title }}
				</h1>
				<div class="subtitle u-subtitle u-subtitle--big">
					{{ page404subtitle }}
				</div>
				<a href="{{ page404button.url }}" target="{{ page404button.target ? '_blank' : '_self' }}" rel="{{ page404button.target ? 'noopener noreferrer' : null }}" class="btn u-btn u-btn--light">
					<span class="text">{{ page404button.customText }}</span>
				</a>
			</div>
		</div>
	</section>
	{% set sectionId = '' %}
{% endblock %}
